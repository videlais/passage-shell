{
  "name": "passage-shell",
  "version": "2.0.0",
  "description": "CLI tool for automated testing of HTML-based interactive fiction projects.",
  "type": "module",
  "main": "src/runner.js",
  "bin": {
    "passage-shell": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=/test/main",
    "test:runner": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/runner.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/videlais/passage-shell.git"
  },
  "keywords": [
    "interactive-fiction",
    "twine",
    "testing",
    "cli",
    "playwright"
  ],
  "author": "Dan Cox",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^61.2.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "@playwright/test": "^1.48.0",
    "commander": "^12.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/main.test.js",
      "/test/main.extended.test.js",
      "/test/main.integration.test.js"
    ]
  }
}
